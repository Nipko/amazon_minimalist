                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"check_in\": \"2026-03-01\",\n  \"check_out\": \"2026-03-05\",\n  \"num_guests\": 4,\n  \"question_type\": \"all\",\n  \"include_photos\": false\n}"
                }
            }
