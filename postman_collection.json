{
    "info": {
        "name": "Amazon Minimalist API v2.0",
        "description": "Availability Checker API — Endpoints para disponibilidad, detalles, media, consultas y reservas",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "https://availability-api.parallext.cloud"
        },
        {
            "key": "api_key",
            "value": "9jnblHkZ13ykPnrn7h0hoDdctA_5ypTtx7w0inJi6YI"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/health"
            }
        },
        {
            "name": "List Apartments",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/apartments",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}"
                    }
                ]
            }
        },
        {
            "name": "Check Availability",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/availability?apt=amazon_minimalist&start=2026-03-01&end=2026-03-05",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "availability"
                    ],
                    "query": [
                        {
                            "key": "apt",
                            "value": "amazon_minimalist"
                        },
                        {
                            "key": "start",
                            "value": "2026-03-01"
                        },
                        {
                            "key": "end",
                            "value": "2026-03-05"
                        }
                    ]
                },
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}"
                    }
                ]
            }
        },
        {
            "name": "Get All Details",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/details",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}"
                    }
                ]
            }
        },
        {
            "name": "Get Apartment Details",
            "request": {
                "method": "GET",
                "url": "{{base_url}}/details/amazon_minimalist",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}"
                    }
                ]
            }
        },
        {
