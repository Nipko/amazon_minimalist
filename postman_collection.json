            "request": {
                "method": "POST",
                "url": "{{base_url}}/query",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"apartment_id\": \"amazon_minimalist\",\n  \"check_in\": \"2026-03-01\",\n  \"check_out\": \"2026-03-05\",\n  \"num_guests\": 2,\n  \"question_type\": \"all\",\n  \"include_photos\": true,\n  \"include_videos\": false\n}"
                }
