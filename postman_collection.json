        {
            "name": "Query — Photos Only",
            "request": {
                "method": "POST",
                "url": "{{base_url}}/query",
                "header": [
                    {
                        "key": "X-API-Key",
                        "value": "{{api_key}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
